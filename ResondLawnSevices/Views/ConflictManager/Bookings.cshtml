@model IEnumerable<ResondLawnSevices.ViewModel.BookingVM>

@{
    ViewBag.Title = "All Booking Requests";
}

<h2>All Booking Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Machine </th>
            <th>Request Date</th>
            <th>Status</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.CustomerName</td>
                    <td>@booking.CustomerEmail</td>
                    <td>@booking.MachineName</td>
                    <td>@booking.Date.ToShortDateString()</td>
                    <td>@booking.Status</td>
                    @* <td>
                        <form asp-action="ResolveConflict" asp-controller="ConflictManager" class="btn btn-warning">
                            <input asp-for="@booking.Id" type="hidden" name="id" value="@booking.Id" />
                            <button class="btn btn-info w-100" type="submit">Resolve Conflict</button>

                            
                        </form>
                    </td> *@
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No booking requests available.</td>
            </tr>
        }
    </tbody>
</table>
