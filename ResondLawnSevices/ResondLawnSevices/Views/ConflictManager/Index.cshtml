@model IEnumerable<ResondLawnSevices.ViewModel.ConflictVM>

@{
    ViewBag.Title = "Conflict List";
}

<h2>Conflict Management - Active Conflicts</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No active conflicts at this time.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                
                <th>Customer Name</th>
                <th>Machine Name</th>
                <th>Requested Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var conflict in Model)
            {
                <tr>
                    <td>@conflict.CustomerName</td>
                    <td>@conflict.MachineName</td>
                    <td>@conflict.RequestedDate.ToShortDateString()</td>
                    <td>@conflict.Status</td>
                    <td>
                        <form asp-action="ResolveConflict" method="post" style="display:inline;">
                            <input type="hidden" name="ConflictId" value="@conflict.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Resolve</button>
                        </form>
                        <form asp-action="DeleteConflict" method="post" style="display:inline;">
                            <input type="hidden" name="ConflictId" value="@conflict.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


