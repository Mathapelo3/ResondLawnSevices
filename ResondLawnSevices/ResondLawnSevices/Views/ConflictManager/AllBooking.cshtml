@model IEnumerable<ResondLawnSevices.Models.Booking>

@{
    ViewBag.Title = "All Booking Requests";
}

<h2>All Booking Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Machine ID</th>
            <th>Request Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.UserId</td>
                    <td>@booking.MachineId</td>
                    <td>@booking.Date.ToShortDateString()</td>
                    <td>@booking.Status</td>
                    <td>
                        <a asp-action="ResolveConflict" asp-route-id="@booking.Id" class="btn btn-warning">Resolve Conflict</a>
                        <!-- Add more action buttons as needed -->
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No booking requests available.</td>
            </tr>
        }
    </tbody>
</table>

